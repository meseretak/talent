{
  "compilerOptions": {
    "target": "es2016",
    "outDir": "./build",
    "module": "NodeNext", // Or ESNext, ES2020, etc.
    "moduleResolution": "NodeNext", // Recommended with NodeNext module
    "types": ["node", "express-session"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.yml", "src/**/*.yaml"]
}
