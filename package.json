{
  "name": "outsourcing_backend",
  "version": "1.0.0",
  "description": "REST API Outsourcing Project Backend with Node JS, TypeScript, Express and Prisma",
  "main": "build/src/index.js",
  "repository": "https://github.com/KalabAmssalu/backend_server.git",
  "scripts": {
    "start": "cross-env NODE_ENV=production yarn build && pm2 start ecosystem.config.json --no-daemon",
    "dev": "cross-env NODE_ENV=development nodemon src/index.ts",
    "test": "cross-env NODE_ENV=test jest -i --colors --verbose --detectOpenHandles",
    "test:docker": "docker-compose -f docker-compose.test.yml up --abort-on-container-exit --exit-code-from test-runner",
    "test:watch": "cross-env NODE_ENV=test jest -i --watchAll",
    "test:coverage": "cross-env NODE_ENV=test jest -i --coverage",
    "test:db:start": "docker-compose -f docker-compose.only-db-test.yml up -d",
    "test:db:stop": "docker-compose -f docker-compose.only-db-test.yml down",
    "test:local": "yarn test:db:start && yarn db:push && yarn test && yarn test:db:stop",
    "test:local:watch": "yarn test:db:start && yarn db:push && yarn test:watch && yarn test:db:stop",
    "test:setup": "ts-node scripts/setup-test-env.ts",
    "test:run": "ts-node scripts/run-tests.ts",
    "test:logs": "ts-node scripts/test-logging.ts",
    "test:loki": "chmod +x scripts/test-loki-api.sh && ./scripts/test-loki-api.sh",
    "test:loki-transport": "ts-node scripts/test-loki-transport.ts",
    "test:logger": "ts-node scripts/test-logger.ts",
    "test:simple-logger": "node scripts/test-simple-logger.js",
    "diagnose:logs": "powershell -ExecutionPolicy Bypass -File scripts/diagnose-logs.ps1",
    "start:loki": "chmod +x scripts/start-loki.sh && ./scripts/start-loki.sh",
    "fix:metrics": "chmod +x scripts/fix-metrics.sh && ./scripts/fix-metrics.sh",
    "diagnose": "chmod +x scripts/diagnose-monitoring.sh && ./scripts/diagnose-monitoring.sh",
    "fix:no-data": "chmod +x scripts/fix-no-data.sh && ./scripts/fix-no-data.sh",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check **/*.ts",
    "prettier:fix": "prettier --write **/*.ts",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "ts-node prisma/seed/main-seed.ts",
    "db:test-schema": "ts-node prisma/seed/test-schema.ts",
    "db:debug-seed": "ts-node prisma/seed/debug-seed.ts",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "db:start": "chmod +x scripts/db-manage.sh && ./scripts/db-manage.sh start",
    "db:dev": "chmod +x scripts/db-manage.sh && ./scripts/db-manage.sh dev",
    "db:reset": "chmod +x scripts/db-manage.sh && ./scripts/db-manage.sh reset",
    "db:backup": "chmod +x scripts/db-manage.sh && ./scripts/db-manage.sh backup",
    "db:restore": "chmod +x scripts/db-manage.sh && ./scripts/db-manage.sh restore",
    "db:status": "chmod +x scripts/db-manage.sh && ./scripts/db-manage.sh status",
    "docker:test": "docker-compose -f docker-compose.test.yml up",
    "docker:dev-db:start": "docker-compose -f docker-compose.only-db-dev.yml up -d",
    "docker:dev-db:stop": "docker-compose -f docker-compose.only-db-dev.yml down",
    "prepare": "husky install",
    "clean": "node -e \"require('fs').rmSync('./build', { recursive: true, force: true })\"",
    "copy-abac": "node -e \"require('fs-extra').ensureDirSync('build/src/abac/policies'); require('fs-extra').copySync('src/abac/policies', 'build/src/abac/policies');\"",
    "build": "yarn clean && tsc -p tsconfig.json && yarn copy-docs && yarn copy-prisma && yarn copy-abac",
    "copy-docs": "node -e \"require('fs-extra').ensureDirSync('build/src/docs'); require('fs-extra').copySync('src/docs', 'build/src/docs');\"",
    "copy-prisma": "node -e \"require('fs-extra').ensureDirSync('build/src/generated'); require('fs-extra').copySync('src/generated', 'build/src/generated');\"",
    "fix-prisma": "node fix-prisma.js"
  },
  "prisma": {
    "schema": "./prisma/schema"
  },
  "keywords": [
    "node",
    "node.js",
    "typescript",
    "boilerplate",
    "express",
    "rest",
    "api",
    "prisma",
    "postgresql",
    "es6",
    "es7",
    "es8",
    "es9",
    "docker",
    "passport",
    "joi",
    "eslint",
    "prettier"
  ],
